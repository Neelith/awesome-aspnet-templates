{
    "ConnectionStrings": {
        "YourProjectNameDb": "Host=postgres-compose;Port=5432;Database=postgres;Username=postgres;Password=postgres;Pooling=true"
    },
    "RedisSettings": {
        "ConnectionString": "redis-compose:6379",
        "KeyPrefix": "dev"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Enrichers.ClientInfo" ],
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {CorrelationId}] {Message:lj} {NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithThreadId",
            {
                "Name": "WithCorrelationId",
                "Args": {
                    "headerName": "x-trace",
                    "addValueIfHeaderAbsence": true
                }
            }
        ]
    }
}
