{
    "ConnectionStrings": {
        "YourProjectNameDb": "Host=localhost:5432;Database=postgres;Username=postgres;Password=mysecretpassword;Pooling=true",
        //Decomment the line below when using docker compose
        //"YourProjectNameDb": "Host=postgres;Port=5432;Database=postgres;Username=postgres;Password=postgres;Pooling=true"
    },
    "RedisSettings": {
        "ConnectionString": "localhost:6379",
        //Decomment the line below when using docker compose
        //"ConnectionString": "redis:6379",
        "KeyPrefix": "dev"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
}
